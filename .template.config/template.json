{
    "$schema": "http://json.schemastore.org/template",
    "identity": "Hroudaadam.CleanishArchitecture.WebApi",
    "shortName": "Cleanish",
    "name": "Cleanish architecture - Web API",
    "description": "Web API solution.",
    "sourceName": "Cleanish",
    "author": "Adam Hrouda",
    "classifications": [
        "Common",
        "Web"
    ],
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "preferNameDirectory": true,
    "defaultName": "NewProject",
    "symbols": {
        "enableGoogleAuth": {
            "type": "parameter",
            "dataType": "bool",
            "defaultValue": "false"
        }
    },
    "sources": [ 
        { 
            "modifiers": [
                { 
                    "condition": "(!enableGoogleAuth)", 
                    "exclude": [ 
                        "src/Cleanish.Application.DataAccess/Exceptions/Auth/GoogleLinkMissingException.cs"
                    ] 
                },
                {
                    "exclude": [
                        "**/[Bb]in/**",
                        "**/[Oo]bj/**",
                        ".template.config/**/*",
                        "**/*.filelist",
                        "**/*.user",
                        "**/*.lock.json",
                        ".git"
                    ]
                } 

            ] 
        } 
    ]
}